<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>dragons</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
</head>

<body>
    <table class="table">
        <thead>
            <tr>
                <th><abbr title="name">name</abbr></th>

                <th><abbr title="active">active</abbr></th>

                <th><abbr title="first-flight">first flight</abbr></th>

                <th><abbr title="description">description</abbr></th>
                <th><abbr title="crew capacity">crew capacity</abbr></th>
            </tr>
        </thead>
        <tbody>
            <% dragons.forEach(function(dragon) { %>
                <tr>
                    <td>
                        <%= dragon.name %>
                    </td>

                    <td>
                        <%= dragon.active %>
                    </td>

                    <td>
                        <%= dragon.first_flight %>
                    </td>

                    <td>
                        <%= dragon.description %>
                    </td>
                    <td>
                        <%= dragon.crew_capacity %>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>

</body>

</html>